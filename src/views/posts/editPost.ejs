<%- include("../_partial/_header.ejs"); %>

<div class="row">
    <div class="col-md-6">
        <h1>Edit: <%= Post.title %></h1>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <!-- Form for updating and deleting the post -->
        <form action="/post/<%= Post._id %>" method="POST" enctype="multipart/form-data" onsubmit="return validateForm(event)">
            <div class="form-group">
                <input type="hidden" name="_method" value="" id="methodInput" />
            </div>
            <div class="form-group">
                <label for="inputTitle">Title</label>
                <input type="text" class="form-control" id="inputTitle" name="title" placeholder="Title" value="<%= Post.title %>" />
            </div>

            <div class="form-group">
                <label for="inputContent">Content</label>
                <textarea class="form-control" rows="3" id="inputContent" name="content" placeholder="Content"><%= Post.content %></textarea>
            </div>

            <div class="form-group">
                <input type="file" name="image" />
            </div>

            <!-- Buttons for updating and deleting in the same row -->
            <div class="form-group d-flex justify-content-between">
                <button type="submit" class="btn btn-primary" onclick="setMethod('PUT')">Update</button>
                <button type="submit" class="btn btn-danger" onclick="return confirmDelete()">Delete</button>
            </div>
        </form>
    </div>
</div>

<script>
    function validateForm(event) {
        const title = document.getElementById("inputTitle").value;
        if (title.trim() === "") {
            alert("Title cannot be empty");
            event.preventDefault();
            return false;
        }
        return true;
    }

    function setMethod(method) {
        // Set the method input value based on the button clicked
        document.getElementById('methodInput').value = method;
    }

    function confirmDelete() {
        // Confirm with the user before deleting
        const confirmed = confirm("Are you sure you want to delete this post?");
        if (confirmed) {
            setMethod('DELETE');
        }
        return confirmed;
    }
</script>

