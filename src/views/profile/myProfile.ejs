<%- include ("../_partial/_header.ejs"); %>

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-2">
            <div class="card mt-5">
                <div class="card-header">
                    <h2 class="text-center"><%= currentUser.username %>'s Profile</h2>
                </div>
                <div class="card-body">
                    <p><strong>Email:</strong> <%= currentUser.email %></p>
                    <p><strong>Joined:</strong> <%= new Date(currentUser.createdAt).toLocaleDateString('en-GB', { weekday: 'short', day: 'numeric', month: 'short', year: 'numeric' }) %></p>
                    <p><%= currentUser.bio %></p>
                    <form action="/updateBio" method="POST">
                        <div class="form-group">
                            <label for="bioInput">About Me:</label>
                            <textarea class="form-control" id="bioInput" name="bio" rows="5"></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Save</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include ("../_partial/_footer.ejs"); %>
